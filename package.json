{
  "name": "use-notification",
  "version": "0.2.1",
  "description": "React hook wrapping the Web Notification API.",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "author": {
    "name": "Aaron Casanova",
    "email": "aaronccasanova@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/aaronccasanova/use-notification"
  },
  "license": "MIT",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "module": "dist/use-notification.esm.js",
  "size-limit": [
    {
      "path": "dist/use-notification.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/use-notification.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@babel/core": "7.14.3",
    "@size-limit/preset-small-lib": "4.11.0",
    "@storybook/addon-essentials": "6.2.9",
    "@storybook/addon-info": "5.3.21",
    "@storybook/addon-links": "6.2.9",
    "@storybook/addons": "6.2.9",
    "@storybook/react": "6.2.9",
    "@types/react": "17.0.6",
    "@types/react-dom": "17.0.5",
    "babel-loader": "8.2.2",
    "husky": "6.0.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-is": "17.0.2",
    "size-limit": "4.11.0",
    "tsdx": "0.14.1",
    "tslib": "2.2.0",
    "typescript": "4.2.4"
  }
}
